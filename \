pub const Compression = enum {
    no_compression,
    lz4,
    zstd,
    int_delta_bit_pack,
    int_bit_pack,
};

pub const Buffer = struct {
    offset: u32,
    size: u32,
    compressed_size: ?u32,
};

pub const Array = struct {
    buffers: []Buffer,
    children: []Array,
    dict_index: u8,
};

pub const Dict = struct {
    keys: Buffer,
    values: Array,
};

pub const Header = struct {
    data_section_size: u32, 
    tables: []Array,
    dicts: []Dict,
};
